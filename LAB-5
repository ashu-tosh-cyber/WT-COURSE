<body>
    <div class="container">
        <h1>Pokedex</h1>
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search pokemon...">
            <button onclick="searchPokemon()">Search</button>
        </div>
        <div class="pokemon-grid" id="pokemonGrid"></div>
    </div>

    <script>
        let allPokemon = [];

        async function fetchPokemon() {
            try {
                const response = await fetch('https://pokeapi.co/api/v2/pokemon?limit=150');
                const data = await response.json();
                
                for (let pokemon of data.results) {
                    const res = await fetch(pokemon.url);
                    const pokemonData = await res.json();
                    allPokemon.push(pokemonData);
                }
                
                displayPokemon(allPokemon);
            } catch (error) {
                console.error('Error fetching pokemon:', error);
            }
        }

        function displayPokemon(pokemon) {
            const grid = document.getElementById('pokemonGrid');
            grid.innerHTML = '';
            
            pokemon.forEach(poke => {
                const card = document.createElement('div');
                card.className = 'pokemon-card';
                
                const types = poke.types.map(t => t.type.name).join(', ');
                const typeHTML = poke.types.map(t => 
                    `<span class="type-badge type-${t.type.name}">${t.type.name}</span>`
                ).join('');
                
                card.innerHTML = `
                    <img src="${poke.sprites.other['official-artwork'].front_default}" alt="${poke.name}">
                    <div class="pokemon-id">#${String(poke.id).padStart(3, '0')}</div>
                    <div class="pokemon-name">${poke.name}</div>
                    <div class="pokemon-type">${typeHTML}</div>
                `;
                
                grid.appendChild(card);
            });
        }

        function searchPokemon() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filtered = allPokemon.filter(poke => 
                poke.name.includes(searchTerm) || poke.id.toString() === searchTerm
            );
            displayPokemon(filtered);
        }

        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') searchPokemon();
        });

        fetchPokemon();
    </script>
</body>
